{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "module":"es2015",
    "moduleResolution":"Node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "outDir": "build",
    "preserveConstEnums": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es2015"
  },
  "filesGlob": [
    "typings/index.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "node_modules/typescript/lib/lib.es6.d.ts"
  ],
  "types": [
    "react",
    "react-dom",
    "react-native",
    "react-navigation",
    "react-test-renderer",
    "expo",
    "jest"
  ],
  "exclude":[
    "build",
    "node_modules",
    "jest.config.js",
    "App.js",
    "babel.config.js",
    "coverage",
    "docs",
    "**/__tests__",
    "**/__mocks__"
  ],
  "compileOnSave": false,
  "typedocOptions": {
    "disableOutputCheck": true,
    "exclude": [ "**/__tests__/*" ],
    "excludeNotExported": true,
    "mode": "modules",
    "name": "WakeyWakey",
    "out": "docs"
  }
}
