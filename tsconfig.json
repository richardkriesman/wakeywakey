{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "build",
    "preserveConstEnums": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": true,
    "target": "es2015"
  },
  "globals": {
    "ts-jest": {
      "tsConfigFile": "tsconfig.test.json"
    }
  },
  "filesGlob": [
    "typings/index.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "node_modules/typescript/lib/lib.es6.d.ts"
  ],
  "exclude": [
    "src/**/__tests__/**",
    "build",
    "node_modules",
    "jest.config.js",
    "App.js"
  ],
  "compileOnSave": false
}
